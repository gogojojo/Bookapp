<body>
<div id="layout" class="pure-g">
   <%= render 'users/sidebar' %>

    <div class="content pure-u-1 pure-u-md-3-4">

  <%= form_for @current, :html => {:class => 'pure-form'}  do |c| %>
	<fieldset class ='pure-group'>
		<%= c.text_field :title, placeholder:'title', :class => 'pure-input-1-2' %>
		<%=c.text_field :author, placeholder:'author', :class => 'pure-input-1-2' %>
		<%=c.text_field :pages_read, placeholder:'pages read', :class => 'pure-input-1-2' %>
		<%=c.text_field :pages, placeholder:'pages', :class => 'pure-input-1-2' %>
	</fieldset>
		<%= c.submit "Submit", :class => "pure-button pure-input-1-2 pure-button-primary" %>
<% end %>

    </div>
</div>
