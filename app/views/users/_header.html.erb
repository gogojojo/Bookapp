<div class="sidebar pure-u-1 pure-u-md-1-4">
    <div class="header">
        <h1 class="brand-title">BOOK BOOKS</h1>
			<% if current_user %>
			  <nav class="nav">
	                <ul class="nav-list">
	                    <li class="nav-item">
	                        <%= link_to "Logout",logout_path,:class => "pure-button" %>
	                    </li><br>
	                    <li class="nav-item">
	                        <%= link_to "Add Books",new_book_path,:class => "pure-button" %>
	                    </li>
	                </ul>
            <% else %>
            <h2 class="brand-subtitle"> Log in </h2>
	            <%= form_for :user, url: '/login'  do |f| %>
				Email:	<%= f.text_field :email %>
				Password :<%= f.password_field :password %>
					<%= f.submit "Login" %>
				<% end %>
				<nav class="nav">
		            <ul class="nav-list">
		                <li class="nav-item">
		                    <%= link_to "Sign Up",signup_path,:class => "pure-button" %>
		                </li>
	            	</ul>
	            </nav>
            <% end %>
    </div>
</div>